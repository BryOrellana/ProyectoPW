    <link rel="stylesheet" type="text/css" href="../public/css/reserva.css">
    <!--===========================CSS PAL NAV====================================-->
    <link rel="stylesheet" href="../public/css/grayscale.css">
    <link href="../public/vendor/bootstrap/css/bootstrap.min.css" rel="stylesheet">
    <!--===============================================================================================-->
</head>

<body>
    <!-- Navigation -->
    <nav class="navbar navbar-expand-lg navbar-light fixed-top" id="mainNav">
        <div class="container">
            <a class="navbar-brand js-scroll-trigger" href="/"><img src="../public/img/deiL.png" alt="dei"></a>
            <button class="navbar-toggler navbar-toggler-right" type="button" data-toggle="collapse"
                data-target="#navbarResponsive" aria-controls="navbarResponsive" aria-expanded="false"
                aria-label="Toggle navigation">
                Menu
            </button>
            <div class="collapse navbar-collapse" id="navbarResponsive">
                <ul class="navbar-nav ml-auto">
                    <li class="nav-item">
                        <a class="nav-link js-scroll-trigger" href="/usuarios">Usuarios</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link js-scroll-trigger" href="/reservas">Reservas</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link js-scroll-trigger" href="/mensajes">Mensajes</a>
                    </li>
            </div>
            </ul>
        </div>
        </div>
    </nav>

    <!--reserve form-->
    <div class="limiter" style="background-image: url('../public/img/silverLaptop.jpg');">
        <div class="container-login100">
            <div class="wrap-login100 p-t-30 p-b-50">
                <span class="login100-form-title p-b-41">
                    Reserva
                </span>
                <form method="POST" action="/addRes" class="login100-form validate-form p-b-33 p-t-5">

                    <div class="wrap-input100 validate-input">
                        <input class="input100" type="text" name="carnet_user" placeholder="00000000" id="carnet_field">
                        <span class="focus-input100" data-placeholder="&#xe82a;"></span>
                    </div>
                    <div class="checkboxes">

                        <div class="check">
                            <input type="checkbox" name="numero_laboratorio" value="L1" id="l1" unchecked="unchecked">
                            <label for="l1" name="Lab1" class="check">
                                <p class="txtBtn">Labo 1</p>
                            </label>
                        </div>
                        <div class="check">
                            <input type="checkbox" name="numero_laboratorio" value="L2" id="l2" unchecked="unchecked">
                            <label for="l2" name="Lab2" class="check">
                                <p class="txtBtn">Labo 2</p>
                            </label>

                        </div>
                        <div class="check">
                            <input type="checkbox" name="numero_laboratorio" value="L3" id="l3" unchecked="unchecked">
                            <label for="l3" name="Lab3" class="check">
                                <p class="txtBtn">Labo 3</p>
                            </label>
                        </div>
                    </div>
                    
                    <hr>
                    
                    <div class="wrap-input100 validate-input date_labo">
                        <label class="label-plat" for="date_labo">Fecha deseada:</label>
                        <input type="date" class="date_labo" name="fecha" id="date_labo">
                    </div>
                        <div class="wrap-input100 validate-input start_time">
                            <label class="label-plat" for="date_labo">Hora de inicio:</label>
                            <input type="time" class="start_time" name="hora_inicio" id="start_time">
                        </div>
                        <div class="wrap-input100 validate-input end_time">
                            <label class="label-plat" for="date_labo">Hora de fin:</label>
                            <input type="time" name="hora_final" id="end_time">
                        </div>
                    <div class="container-login100-form-btn m-t-32">
                        <button class="login100-form-btn" type="submit">
                            <a class="clickBigger" id="submit_btn">Reservar!</a>
                        </button>
                    </div>
                </form>
            </div>
        </div>
        <div class="container-login100">
            <table class="tablaE" border="1">
                <tr>
                    <th>Reservas</th>
                </tr>
                {{#each rese}}
                <tr>
                <td>{{carnet_user}} reservo el {{numero_laboratorio}} el {{fecha}} de {{hora_inicio}} a {{hora_final}} </td>
                </tr>

                {{else}}


                No Record Found

                {{/each}}
            </table>
        </div>
    </div>


    <div id="dropDownSelect1"></div>
    <!-- <script src="/public/js/login.js"></script> -->
    <script src="../public/js/register.js"></script>
    <script src="../public/vendor/jquery/jquery.min.js"></script>
    <script src="../public/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>
</body>

</html>